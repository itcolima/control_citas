<div class="container">

<h1 class="text-success">Lista de productos</h1>
 
<div class="table-responsive">
    <table class="table  table-hover table-condensed">
        
  <thead>

  <tr class="active">
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Costo</th>
    <th>Existencia</th>
    <th>Precio</th>
    <th>Stock_Min</th>
    
  </tr>
 </thead>
 <tbody>
   <% @products.each do |product| %>
    <tr class="success text-verdana">
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.cost %></td>
      <td><%= product.existence %></td>
      <td><%= product.price %></td>
      <td><%= product.minstock %></td>


      <td><%= link_to 'Ver', product_path(product) %></td>
    <td><%= link_to 'Modificar', edit_product_path(product) %></td>
    <td><%= link_to 'Eliminar', product_path(product),
                    method: :delete, data: { confirm: 'Esta seguro de eliminar el producto/s?' } %></td>
    </tr>
  <% end %>


 </tbody>



    </table>

  </div>
</div>


<%= link_to 'Nuevo Producto', new_product_path %>